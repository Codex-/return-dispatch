{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "noEmit": true,

    "outDir": "lib",
    "rootDir": "src",

    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["src"]
}
